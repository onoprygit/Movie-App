<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.MovieDetailsFragment">

    <ImageView
        android:id="@+id/movieBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        tools:src="@tools:sample/avatars"
        tools:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/movieDetailsContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/movieBackgroundImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <TextView
                android:id="@+id/movieGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="20dp"
                tools:text="Action"
                android:textSize="@dimen/text_3"
                android:textColor="@color/text_color"
                android:background="@drawable/ic_genre_backgroind_oval"
                android:gravity="center" />

            <TextView
                android:id="@+id/movieReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/movieGenres"
                app:layout_constraintBottom_toBottomOf="@id/movieGenres"
                app:layout_constraintStart_toEndOf="@id/movieGenres"
                android:layout_marginStart="14dp"
                tools:text="13.10.2022"
                android:textSize="@dimen/text_3"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/movieGenres"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                tools:text="@tools:sample/lorem"
                android:textSize="@dimen/title_1"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/movieAgeCertification"
                android:layout_width="41dp"
                android:layout_height="41dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                tools:text="18+"
                android:textSize="@dimen/text_1"
                android:textColor="@color/text_color"
                android:background="@drawable/ic_rating_background_oval"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/movieDetailsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/movieTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="44dp"
                tools:text="@string/sample_movie_desctiption"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_1"
                />

            <TextView
                android:id="@+id/movieCastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieDetailsDescription"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                tools:text="Cast"
                android:textSize="@dimen/title_2"
                android:textColor="@color/text_color"
                />








        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>